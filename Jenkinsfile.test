pipeline {
    agent any

    environment {
        EC2_HOST = '3.21.246.147'
        FRONTEND_PORT = '8085'
        BACKEND_PORT = '8000'
        NODE_VERSION = '18.20.7'
        NODE_ENV = 'test'
        API_URL = "http://${EC2_HOST}:${BACKEND_PORT}/api"
    }

    stages {
        stage('Cleanup') {
            steps {
                sh '''
                    # Remove unused Docker resources
                    docker system prune -af --volumes || true
                    
                    # Remove old images
                    docker rmi $(docker images -q) || true
                    
                    # Clean npm cache
                    npm cache clean --force || true
                '''
            }
        }

        stage('Setup Node.js') {
            steps {
                sh '''
                    # Install nvm if not present
                    if [ ! -d "$HOME/.nvm" ]; then
                        curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.7/install.sh | bash > /dev/null 2>&1
                    fi
                    
                    # Source nvm and install Node.js silently
                    export NVM_DIR="$HOME/.nvm"
                    [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
                    nvm install ${NODE_VERSION} > /dev/null 2>&1
                    nvm use ${NODE_VERSION} > /dev/null 2>&1
                    echo "Node.js $(node --version) and npm $(npm --version) ready"
                '''
            }
        }

        stage('Frontend Build') {
            steps {
                dir('frontend') {
                    sh '''
                        export NVM_DIR="$HOME/.nvm"
                        [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh" > /dev/null 2>&1
                        nvm use ${NODE_VERSION} > /dev/null 2>&1
                        
                        echo "Installing frontend dependencies..."
                        npm install --silent > /dev/null 2>&1
                        echo "Building frontend..."
                        npm run build --silent > /dev/null 2>&1 || true
                        echo "Frontend build completed"
                    '''
                }
            }
        }

        stage('Backend Build') {
            steps {
                dir('backend') {
                    sh '''
                        export NVM_DIR="$HOME/.nvm"
                        [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh" > /dev/null 2>&1
                        nvm use ${NODE_VERSION} > /dev/null 2>&1
                        
                        echo "Installing backend dependencies..."
                        npm install --silent > /dev/null 2>&1
                        echo "Building backend..."
                        npm run build --silent > /dev/null 2>&1
                        echo "Backend build completed"
                    '''
                }
            }
        }

        stage('Backend Security Scan') {
            steps {
                dir('backend') {
                    sh '''
                        export NVM_DIR="$HOME/.nvm"
                        [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
                        nvm use ${NODE_VERSION}
                        
                        npm audit
                    '''
                }
            }
        }

        stage('Docker Build Tests') {
            steps {
                parallel(
                    backend: {
                        dir('backend') {
                            sh '''
                                echo "Building backend Docker image..."
                                docker build -t codeladder-backend:test -f Dockerfile.backend . > /dev/null 2>&1
                                echo "Backend Docker build complete"
                            '''
                        }
                    },
                    frontend: {
                        dir('frontend') {
                            sh '''
                                echo "Building frontend Docker image..."
                                docker build -t codeladder-frontend:test -f Dockerfile.frontend . > /dev/null 2>&1
                                echo "Frontend Docker build complete"
                            '''
                        }
                    }
                )
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            slackSend(
                color: 'good',
                message: "Branch Tests Passed: ${env.BRANCH_NAME}\nBuild Number: ${env.BUILD_NUMBER}"
            )
        }
        failure {
            slackSend(
                color: 'danger',
                message: "Branch Tests Failed: ${env.BRANCH_NAME}\nBuild Number: ${env.BUILD_NUMBER}\nCheck the logs: ${env.BUILD_URL}"
            )
        }
    }
} 